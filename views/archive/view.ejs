<% include ../partials/head %>
<%- include('../partials/nav', {active: 'archive'}); %>

<div class="container">
    <header class="jumbotron">
            <div class="container">
                <h2>View Brew</h2>
                <p>See the details of one of your past brews</p>
            </div>
        </header>
    <div class="row">
        <div class="col-lg-6">
            <div class="brew-form brewDetails">
                <h3>
                    Brew Details
                </h3>
                <form>
                    <div class="form-group">
                        <label for="name">Brew Name</label>
                        <input type="text" class="form-control" name="name" id="name" aria-describedby="name" readonly value="<%=brew.name%>">
                    </div>
                    <div class="form-group">
                        <label for="min">Temperature Range</label>
                        <div class="row">
                            <input type="number" readonly class="form-control form-half" name="minTemp" id="min" value="<%=brew.minTemp%>" step="0.25">
                            <input type="number" readonly class="form-control form-half" name="maxTemp" id="max" value="<%=brew.maxTemp%>" step="0.25">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="topic">Topic</label>
                        <input class="form-control" readonly type="text" name="topic" value="<%=brew.topic%>">
                    </div>
                    <div class="form-group">
                        <label for="created">Created on</label>
                        <input class="form-control" readonly type="text" readonly value="<%=new moment(brew.created).format('H:mm, MMMM Do YYYY')%>">
                    </div>
                    <div style="display: inline-block">
                </form>
                <a href="/archive/<%=brew.id%>/graph" class="btn btn-outline-light"><i class="fas fa-chart-line"></i></a>
                    <form id="delete-form" action="/archive/<%=brew._id %>/?_method=DELETE" method="POST">
                        <a>
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </a>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/foot %>