<% include ./partials/head %>
<script src="/js/chart/Chart.min.js"></script>
<script src="/js/chart/chartjs-plugin-annotation.min.js"></script>
<link rel="stylesheet" href="/css/slider.css">

<%- include('./partials/nav', {active:'archive'}); %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h2>Temperature Tracking</h2>
                <p>See how the brew is progressing through it's fermentation</p>
            </div>
        </header>
        <div class="row text-center">
            <div class="col-lg-8">
                <canvas id="tempChart" width="300" height="250"></canvas>
            </div>
            <div class="col-lg-4">
                <div class="brew-form brewDetails">
                    <h3>
                        Graph Settings
                    </h3>
                    <p>
                        Readings for last <span id="date">1</span> hours
                    </p>
                    <input id="date-range" type="range" min="1" max="24" step="1" value="24">
                </div>
                <div class="brew-form brewDetails">
                        <h3>
                            Simulate
                        </h3>
                        <div class="form-group">
                            <label for="sim-temp">Enter a temperature reading</label>
                            <input class="form-control form-control-sm " id="sim-temp" name="sim-temp" type="number" step="0.25" value="21.0">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary" onclick="simReading()">Send</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <script src="/js/slider.js"></script>
    <script src="/js/chart/chart.js"></script>
<% include ./partials/foot %>
